\newenvironment{linearProg}[4]{
    \def\arraystretch{1.1}
    \begin{tabular}{lc}
        #1 & #2 \\
        subject to & \\
        & \sysdelim..{#3} \\
        with & #4
}{
    \end{tabular}
}

\newenvironment{linearProgG}[3]{
    \def\arraystretch{1.1}
    \begin{tabular}{lc}
        maximize & #1 \\
        subject to & \\
        & #2 \\
        with & #3
}{
    \end{tabular}
}
